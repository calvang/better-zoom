{
  "name": "better-zoom",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/express": "^4.17.7",
    "@types/jest": "^24.0.0",
    "@types/node": "^14.0.27",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-router-dom": "^5.1.5",
    "@types/socket.io": "^2.1.10",
    "@types/socket.io-client": "^1.4.33",
    "@types/uuid": "^8.0.1",
    "concurrently": "^5.2.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "nodemon": "^2.0.4",
    "peer": "^0.5.3",
    "peerjs": "^1.3.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "ts-node": "^8.10.2",
    "typescript": "~3.7.2",
    "uuid": "^8.3.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon server/server.ts",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript, Node\" -c \"yello.bold, cyan.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "client-dev": "yarn start",
    "server-dev": "yarn watch",
    "server": "yarn watch-node",
    "peerjs": "peerjs --port 9000",
    "peerjs-dev": "peerjs --port 9000 --key peerjs --path /",
    "dev": "NPM_CONFIG_PRODUCTION=false concurrently \"yarn run client-dev\" \"yarn run server-dev\" \"yarn run peerjs-dev\"",
    "pilot": "NPM_CONFIG_PRODUCTION=true concurrently \"yarn run server\" \"yarn run peerjs-dev\"",
    "prod": "NPM_CONFIG_PRODUCTION=true concurrently \"yarn run server\" \"yarn run peerjs\"",
    "test-deploy": "yarn run build && yarn run pilot",
    "test-heroku": "yarn run build && heroku local web",
    "deploy-heroku": "git add .; git commit -m \"Update app for deployment\"; git push heroku master",
    "deploy": "yarn run build; yarn deploy-heroku"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:5000"
}
